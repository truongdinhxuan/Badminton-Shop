                                            <td>
                                                
                                                    {{orderCode}}
                                                
                                            </td>

                                            <td>{{buyerName}}</td>
                                            <td>{{buyerEmail}}</td>
                                            <td>{{buyerPhone}}</td>
                                            <td>{{buyerAddress}}</td>
                                            <td>{{buyerCountry}}</td>
                                            <td>{{buyerNote}}</td>
                                            <td>{{amount}}</td>
                                            <td>{{paymentMethod}}</td>
                                            <td>{{note}}</td>
                                            <td>
                                                <b>{{statusName}}</b>
                                            </td>  
                                            <td>
                                                <a href="/staff/update-order/{{_id}}">
                                                <iconify-icon icon="icon-park:edit-two" width="32" height="32"></iconify-icon>
                                                </a>
                                            </td>
                                        </tr>
                                        {{/each}}
                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
