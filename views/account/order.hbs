<div class="container my-5">
  <h2 class="text-center mb-4">Order History</h2>
  <div class="row">
    {{#each data}}
    <!-- Order Card -->
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="card order-card shadow-sm">
        <div class="card-header bg-dark text-white">
          <div class="d-flex justify-content-between align-items-center">
            <span>Order #{{orderCode}}</span>
            {{#if status}}
            <span class="badge badge-success">{{status.name}}</span>
            {{/if}}
          </div>
        </div>
        <div class="card-body">
          <div class="order-item">
            {{#each items}}
              {{#if @first}}
            <img src="{{item.image}}" alt="Product Image" class="img-fluid rounded">
            <div class="order-details">
              
              <h6>{{item.name}}</h6>
              <p class="text-muted mb-1">
                {{item.brandName}} - {{item.categoryName}}
              </p>
              <p class="mb-0"><strong>Quantity:</strong> {{qty}}</p>
              <p class="mb-0"><strong>Price:</strong> {{price}}vnd </p>
              {{/if}}
              {{/each}}
            </div>
            {{#if (gt (length items) 1)}}
                <a href="/order/{{orderCode}}">
                <span class="more-items">+{{subtract (length items) 1}} more</span>
                </a>
              {{/if}}
          </div>
          <hr>
          <p><strong>Total:</strong> {{amount}}vnd</p>
          <p><strong>Payment:</strong> {{paymentMethod}}</p>
        </div>
        <div class="card-footer bg-light">
          <button class="btn btn-primary btn-sm">Reorder</button>
          <button class="btn btn-outline-danger btn-sm">Request Refund</button>
        </div>
      </div>
    </div>
    {{/each}}
    <!-- Repeat for more orders -->
  </div>
</div>
<style>
.order-item {
  position: relative; /* Enables absolute positioning for child elements */
  border: 1px solid #ccc;
  padding: 15px;
  margin-bottom: 10px;
  border-radius: 5px;
  overflow: hidden;
  display: flex;
  flex-direction: column; /* Ensures content stacks vertically */
  min-height: 150px; /* Consistent card height */
}

.order-item img {
  width: 80px;
  height: 80px;
  object-fit: cover;
  margin-bottom: 10px; /* Adds space between the image and text */
}

.order-details {
  flex-grow: 1; /* Allows details to expand */
}

.more-items {
  position: absolute;
  bottom: 10px; /* Aligns to bottom */
  right: 10px; /* Aligns to right */
  background-color: rgba(0, 0, 0, 0.7); /* Dark background for contrast */
  color: #fff;
  padding: 5px 10px;
  border-radius: 3px;
  font-size: 12px;
  z-index: 10; /* Ensures it stays on top */
  white-space: nowrap; /* Prevents wrapping */
}

