<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Search Products</title>
</head>
<body>
  <!-- Hiển thị sản phẩm -->
  {{#if products.length}}
    <h2>Results for "{{searchQuery}}"</h2>
    <ul>
      {{#each products}}
        <li>
          <img src="{{this.imageUrl}}" alt="{{this.name}}" style="width: 100px;">
          <h3>{{this.name}}</h3>
          <p>{{this.description}}</p>
          <p>${{this.price}}</p>
        </li>
      {{/each}}
    </ul>
    
    <!-- Phân trang -->
    <div>
      {{#if (gt currentPage 1)}}
        <a href="/search?search_query={{searchQuery}}&page={{subtract currentPage 1}}">Previous</a>
      {{/if}}
      {{#if (lt currentPage totalPages)}}
        <a href="/search?search_query={{searchQuery}}&page={{add currentPage 1}}">Next</a>
      {{/if}}
    </div>
  {{else}}
    <p>No products found for your search query.</p>
  {{/if}}
</body>
</html>
