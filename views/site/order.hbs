{{#if customer}}
<hr>
<div class="container-fluid px-4 py-5 container" id="icon-grid">
<div class="col-md-6">
          <h3>Your Order</h3>
          <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">Order Code</th>
                <th scope="col">Amount</th>
                <th scope="col">Pay method</th>
                <th scope="col">Status</th>
              </tr>
            </thead>
            <tbody>
                {{#each data}}
              <tr>
                <th scope="row">{{orderCode}}</th>
                <td>{{amount}}</td>
                <td>{{paymentMethod}}</td>
                <td>{{statusName}}</td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        </div>
{{/if}}