<!-- Banner -->
  {{#if customer}}
  <section id="banner" class="py-3" style="background: #F9F3EC;">
    <div class="container">
      <div class="hero-content py-5 my-3">
        <h2 class="display-1 mt-3 mb-0">Cart</h2>
        <nav class="breadcrumb">
          <a class="breadcrumb-item nav-link" href="#">Home</a>
          <a class="breadcrumb-item nav-link" href="#">Pages</a>
          <span class="breadcrumb-item active" aria-current="page">Cart</span>
        </nav>
      </div>
    </div>
  </section>
<!-- Cart Detail -->
  
  <section id="cart" class="my-5 py-5">
    <div class="container">
      <div class="row g-md-5">
        <div class="col-md-8 pe-md-5">
          <table class="table">
            <thead>
              <tr>
                <th scope="col" class="card-title text-uppercase">Product</th>
                <th scope="col" class="card-title text-uppercase">Quantity</th>
                <th scope="col" class="card-title text-uppercase">Subtotal</th>
                <th scope="col" class="card-title text-uppercase"></th>
              </tr>
            </thead>
            {{!-- Body cart --}}
        
        
            <tbody>
            {{#each products}}
              <tr>
                <td scope="row" class="py-4">
                  <div class="cart-info d-flex flex-wrap align-items-center ">
                    <div class="col-lg-3">
                      <div class="card-image">
                        {{#if item.images}}
                        <img src="{{item.images.[0]}}" alt="cloth" class="img-fluid">
                        {{/if}}
                      </div>
                    </div>
                    <div class="col-lg-9">
                      <div class="card-detail ps-3">
                        {{!-- Short the --}}
                        <h5 class="card-title">
                          <a href="#" class="text-decoration-none">{{this.item.name}}</a>
                        </h5>
                      </div>
                    </div>
                  </div>
                </td>

                <td class="py-4 align-middle">
                  <div class="input-group product-qty align-items-center w-50">
                    
                    <a href="cart/reduce/{{this.item._id}}">
                    <iconify-icon icon="ph:minus" width="30" height="30"></iconify-icon>
                    </a>

                    <input type="text" id="quantity" name="quantity"
                      class="form-control input-number text-center p-2 mx-1" value="{{this.qty}}" data-product-id="{{ item.item._id }}">
                    {{!-- <span class="total">{{this.qty}}</span> --}}
                    <a href="cart/plus/{{this.item._id}}">
                    <iconify-icon icon="basil:plus-outline" width="30" height="30"></iconify-icon>
                    </a>
                  </div>
                </td>
                

                <td class="py-4 align-middle">
                                <div class="total-price">
                                    <span class="secondary-font fw-medium" id="item-subtotal-{{item.item._id}}">{{price}} đ</span>
                                </div>
                            </td>
                
                <td class="py-4 align-middle">
                  <div class="cart-remove">
                    <a href="cart/remove/{{this.item._id}}">
                      <svg width="24" height="24">
                        <use xlink:href="#trash"></use>
                      </svg>
                    </a>
                  </div>
                </td>

              </tr>
              {{/each}}
            </tbody>
          </table>   
        </div>
        <div class="col-md-4">
          <div class="cart-totals">
            <h2 class="pb-4">Cart Total</h2>
            <div class="total-price pb-4">
              <table cellspacing="0" class="table">
                <tbody>
                  <tr class="subtotal pt-2 pb-2 border-top border-bottom">
                    <th>QUANTITY</th>
                    <td data-title="Subtotal">
                      <span class="price-amount amount text-dark ps-5">
                        <bdi>
                          <span class="price-currency-symbol"></span>{{totalQty}}
                        </bdi>
                      </span>
                    </td>
                  </tr>
                  <tr class="order-total pt-2 pb-2 border-bottom">
                    <th>TOTAL</th>
                    <td data-title="Total">
                      <span class="price-amount amount text-dark ps-5">
                        <span class="secondary-font fw-medium">{{totalPrice}} đ</span>
                      </span>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
            <div class="button-wrap row g-2">
              {{!-- <div class="col-md-6"><button class="btn btn-dark btn-lg rounded-1 fs-6 p-3 w-100">Update Cart</button></div> --}}
              <div class="col-md-12"><a href="/checkout"
                  class="btn btn-primary p-3 text-uppercase rounded-1 w-100">Proceed to checkout</a>
              </div>
              
              <div class="col-md-6"><a href="/product"><button class="btn btn-dark btn-lg rounded-1 fs-6 p-3 w-100">Continue To
                  Shop</button></a></div>
              
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
   {{else}}
   <section id="empty-cart" class="my-5 py-5">
    <div class="container">
      <div class="row">
        <div class="col-md-12 text-center">
          <h3 class="display-4 mb-4">Your cart is empty.</h3>
          <p class="lead">Start exploring our amazing collection!</p>
          <a href="/product" class="btn btn-cart btn-lg">Continue Shopping</a>
        </div>
      </div>
    </div>
  </section>
 {{/if}}
 <style>
    /* In your main stylesheet or within a <style> tag */
  #empty-cart {
    background: #F9F3EC; /* Match background to the banner if desired */
  }

  #empty-cart .btn-primary {
    /* Customize the button style to your liking */
    background-color: #007bff; /* Example */
    border-color: #007bff;     /* Example */
  }
  </style>
